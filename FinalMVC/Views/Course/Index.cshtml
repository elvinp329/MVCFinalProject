@{
    CourseViewModel viewModel = Model;
    var courses = viewModel.Courses;

}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>courses</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form">
                    <form id="search" action="#">
                        <input id="course-search" type="search" placeholder="Search..." name="search" />
                        <button type="submit">search</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            <partial name="_CoursePartial" model="@courses"> </partial>
        </div>
        <div class="row justify-content-center">
            <input value="@ViewBag.CourseCount" type="hidden" id="courseCount" />
            <button class="btn btn-primary" id="loadCourse">Load more</button>
        </div>
    </div>
</div>
<!-- Course End -->
