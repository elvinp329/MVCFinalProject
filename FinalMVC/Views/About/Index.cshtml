@using FinalMVC.DAL.Entities;
@{
    AboutViewModel viewModel = Model;
    var abouts = viewModel.Abouts;
    var testimonials = viewModel.Testimonials;
    var notices = viewModel.Notices;
    var noticeVideos = viewModel.NoticesVideo;
    var teachers = viewModel.Teachers;
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>about us</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- About Start -->
<div class="about-area pt-145 pb-155">
    <div class="container">
        <div class="row">
           @foreach (var item in abouts)
            {
                <div class="col-md-6 col-sm-6">
                    <div class="about-content">
                        @Html.Raw(@item.Title)
                        <p>@item.Description</p>
                        <p class="hidden-sm">I must explain to you how all this mistaken idea of denouncing pleure and prsing pain was born and I will give you a complete account of the system</p>
                        <a a asp-controller="course" asp-action="details" asp-route-id="1" class="default-btn">view courses</a>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6">
                    <div class="about-img">
                        <img src="~/img/about/@item.ImageUrl" alt="about">
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- About End -->
<!-- Teacher Start -->
<div class="teacher-area pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/img/icon/section.png" alt="title">
                    <h2>meet our teachers</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <partial name="_TeacherPartial" model="@teachers"> </partial>
        </div>
    </div>
</div>
<!-- Teacher End -->
<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            <div class="testimonial-owl owl-theme owl-carousel">
                <div class="col-md-8 col-md-offset-2 col-sm-12">
                   @foreach (var item in testimonials)
                    {
                        <div class="single-testimonial">
                            <div class="testimonial-info">
                                <div class="testimonial-img">
                                    <img src="~/img/testimonial/@item.ImageUrl" alt="testimonial">
                                </div>
                                <div class="testimonial-content">
                                    <p>@item.Description</p>
                                    <h4>@item.Fullname</h4>
                                    <h5>@item.KindOfactivity</h5>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Notice Start -->
<section class="notice-area two pt-140 pb-100">
    <div class="container">
        <div class="row">
           @foreach (var item in noticeVideos)
            {
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="notice-right-wrapper mb-25 pb-25">
                        <h3>TAKE A VIDEO TOUR</h3>
                        <div class="notice-video">
                            <div class="video-icon video-hover">
                                <a class="video-popup" href="@item.VideoUrl">
                                    <i class="zmdi zmdi-play"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left-wrapper">
                    <h3>notice board</h3>
                    <div class="notice-left">
                        <partial name="_NoticePartial" model="@notices"> </partial>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
