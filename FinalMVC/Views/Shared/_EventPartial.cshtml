@using FinalMVC.DAL.Entities;
@model List<Event>

@foreach (var item in Model)
{
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-event mb-60">
            <div class="event-img">
                <a href="event-details.html">
                    <img src="~/img/event/@item.ImageUrl" alt="event">
                    <div class="course-hover">
                        <i class="fa fa-link"></i>
                    </div>
                </a>
                <div class="event-date">
                    @Html.Raw(item.Date)
                </div>
            </div>
            <div class="event-content text-left">
                <h4><a href="event-details.html">@item.Title</a></h4>
                <ul>
                    <li><span>time:</span> @item.Time</li>
                    <li><span>venue</span>@item.Location</li>
                </ul>
                <div class="event-content-right">
                    <a a asp-controller="event" asp-action="details" asp-route-id="@item.Id" class="default-btn">join now</a>
                </div>
            </div>
        </div>
    </div>
}