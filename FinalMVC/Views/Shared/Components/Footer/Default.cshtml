@using FinalMVC.DAL.Entities;
@model Footer 
 
<!-- Footer Start -->
<footer class="footer-area">
    <div class="main-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-6 col-xs-12">   
                    <div class="single-widget pr-60">
                        <div class="footer-logo pb-25">
                            <a href="/home/index"><img src="~/img/logo/@Model.LogoUrl" alt="eduhome"></a>
                        </div>
                        <p>@Model.Description </p>
                        <div class="footer-social">
                            <ul>
                                @foreach (var item in Model.SocialMedia)
                                {
                                    <li><a href="#"><i class="@item.SocialM"></i></a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="single-widget">
                        <h3>information</h3>
                        <ul>
                            @foreach (var item in Model.Information)
                            {
                                <li><a href="#">@item.Title</a></li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-md-2 col-sm-6 col-xs-12">
                    <div class="single-widget">
                        <h3>useful links</h3>
                        <ul>
                            @foreach (var item in Model.UsefulLinks)
                            {
                                <li><a href="course.html">@item.Title</a></li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="single-widget">
                        <h3>get in touch</h3>
                       @foreach (var item in Model.GetInTouch)
                        {
                           @Html.Raw(item.Address)
                            <p>@item.PhoneNumber_1<br>@item.PhoneNumber_2</p>
                            <p>@item.Email<br>www.eduhome.com</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-bottom text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <p>Copyright © <a href="#" target="_blank">@Model.CreatedBy</a> 2017. All Right Reserved By @Model.CreatedBy</p>
                </div>
            </div>
        </div>
    </div>
</footer>
<!-- Footer End -->
